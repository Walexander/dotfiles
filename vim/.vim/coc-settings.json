{
  "suggest.floatConfig": {
    "border": true
  },
  "suggest.noselect":true,

  "hover.floatConfig": {
    "border": true,
    "shadow": true,
    "highlight":  "CocFloating"
  },
  "coc.preferences.jumpCommand": "edit",
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
